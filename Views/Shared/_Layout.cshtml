<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Sử dụng Bootstrap 5 chính thức -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    @RenderSection("Styles", required: false) <!-- Render các CSS tùy chỉnh -->
</head>
<body>
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Quản lý tài chính</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Transaction")">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Report")">Báo cáo</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Logout", "Account")" class="btn btn-danger logout-btn">
                                Đăng xuất
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }

    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Tải Bootstrap JS và Popper.js (được tích hợp trong Bootstrap 5) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false) <!-- Render các script tùy chỉnh -->
</body>
</html>
